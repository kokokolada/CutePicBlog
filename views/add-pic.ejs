<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-pic-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="col-md-12">
                        <label for="pic-img"><b>Image</b></label><br>
                        <input type="file" name="image" id="pic_file" class="" required>
                </div>
                <div class="form-group col-md-4">
                        <input type="text" class="form-control" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$" name="username" id="username" placeholder="username" required>
                    </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,100}$" name="pic_title" id="title" placeholder="title" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,200}$" name="pic_desc" id="desc" placeholder="description" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Picture</button>
        </form>
    </div>
</div>

</body>
</html>
